<script>
  // Controle das abas
  const tabs = ['Home', 'Features', 'Examples', 'Plans', 'App'];
  tabs.forEach(tab => {
    const link = document.getElementById('nav' + tab);
    const content = document.getElementById('content' + tab);

    link.addEventListener('click', e => {
      e.preventDefault();
      // Desativa todos
      tabs.forEach(t => {
        document.getElementById('nav' + t).classList.remove('active');
        document.getElementById('content' + t).classList.remove('active');
      });
      // Ativa clicado
      link.classList.add('active');
      content.classList.add('active');
      // Scroll to top ao trocar aba
      window.scrollTo({top:0, behavior:'smooth'});
    });
  });

  // Modal
  const modalOverlay = document.getElementById('modalOverlay');
  const modalCloseBtn = document.getElementById('modalCloseBtn');
  const openModalBtn = document.getElementById('openModalBtn');

  openModalBtn.addEventListener('click', () => {
    modalOverlay.classList.add('active');
    document.body.style.overflow = 'hidden'; // Bloqueia scroll da página
  });

  modalCloseBtn.addEventListener('click', () => {
    modalOverlay.classList.remove('active');
    document.body.style.overflow = ''; // Libera scroll
  });

  modalOverlay.addEventListener('click', e => {
    if(e.target === modalOverlay) {
      modalOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  });

  // Modo claro/escuro
  const themeToggleBtn = document.getElementById('themeToggle');
  themeToggleBtn.addEventListener('click', () => {
    document.body.classList.toggle('light-mode');
    if(document.body.classList.contains('light-mode')){
      themeToggleBtn.textContent = 'Modo Escuro';
    } else {
      themeToggleBtn.textContent = 'Modo Claro';
    }
  });

  // Voltar ao topo
  const backToTopBtn = document.getElementById('backToTop');
  window.addEventListener('scroll', () => {
    if(window.scrollY > 300) {
      backToTopBtn.style.display = 'block';
    } else {
      backToTopBtn.style.display = 'none';
    }
  });
  backToTopBtn.addEventListener('click', () => {
    window.scrollTo({top:0, behavior:'smooth'});
  });

  // Newsletter - simulação de envio
  const newsletterForm = document.getElementById('newsletterForm');
  const emailInput = document.getElementById('emailInput');
  const newsletterMsg = document.getElementById('newsletterMsg');

  newsletterForm.addEventListener('submit', e => {
    e.preventDefault();
    const email = emailInput.value.trim();

    if(email === '') {
      newsletterMsg.textContent = 'Por favor, insira um e-mail válido.';
      newsletterMsg.style.color = 'tomato';
      return;
    }

    newsletterMsg.style.color = 'lightgreen';
    newsletterMsg.textContent = 'Obrigado por assinar nossa newsletter!';
    emailInput.value = '';
  });
</script>
