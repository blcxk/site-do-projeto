    <script>
        const homeLink = document.getElementById('homeLink');
        const featuresLink = document.getElementById('featuresLink');
        const heroSection = document.getElementById('heroSection');
        const btnFeatures = document.getElementById('btnFeatures');
        const modalOverlay = document.getElementById('modalOverlay');
        const closeModalBtn = document.getElementById('closeModalBtn');

        // Mostrar modal (conteúdo "home")
        function openModal() {
            modalOverlay.style.display = 'flex';
            heroSection.style.filter = 'blur(4px)';
            featuresLink.classList.remove('active');
            homeLink.classList.add('active');
        }

        // Fechar modal
        function closeModal() {
            modalOverlay.style.display = 'none';
            heroSection.style.filter = 'none';
            homeLink.classList.remove('active');
        }

        // Mostrar seção recursos
        function showFeatures() {
            modalOverlay.style.display = 'none';
            heroSection.style.display = 'none';
            featuresLink.classList.add('active');
            homeLink.classList.remove('active');
        }

        homeLink.addEventListener('click', e => {
            e.preventDefault();
            openModal();
        });

        featuresLink.addEventListener('click', e => {
            e.preventDefault();
            heroSection.style.display = 'flex';
            showFeatures();
        });

        btnFeatures.addEventListener('click', e => {
            e.preventDefault();
            heroSection.style.display = 'none';
            showFeatures();
        });

        closeModalBtn.addEventListener('click', e => {
            e.preventDefault();
            closeModal();
        });

        // Fechar modal clicando fora do conteúdo
        modalOverlay.addEventListener('click', e => {
            if (e.target === modalOverlay) {
                closeModal();
            }
        });
    </script>
